    / Custom styles for this template
  %body#page-top
    / Navigation
    %nav#mainNav.navbar.navbar-expand-lg.navbar-dark.fixed-top
      .container
        %a.navbar-brand.js-scroll-trigger{href: "#page-top"} Jera Flix
        %button.navbar-toggler.navbar-toggler-right{"aria-controls" => "navbarResponsive", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarResponsive", "data-toggle" => "collapse", type: "button"}
          Menu
          %i.fas.fa-bars
        #navbarResponsive.collapse.navbar-collapse
          %ul.navbar-nav.text-uppercase.ml-auto
            
            %li.nav-item
              %a.nav-link.js-scroll-trigger{href: "#portfolio"} Perfils
            %li.nav-item
              %a.nav-link.js-scroll-trigger{href: "#services"} Categorias
            %li.nav-item
              %a.nav-link.js-scroll-trigger{href: "#about"} Lan√ßamentos
            %li.nav-item
              %a.nav-link.js-scroll-trigger{href: "#contact"} Meus dados
            %li.nav-item
              = text_field_tag :q,'', placeholder: 'buscar por...', class: 'nav-link js-scroll-trigger search-at-top'
    = yield