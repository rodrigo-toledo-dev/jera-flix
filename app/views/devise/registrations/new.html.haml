%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .row
    .col-sm-12
      .form-group.row
        =f.label :email, class: 'col-sm-4 col-form-label'
        .col-sm-8
          =f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", class: 'form-control'
      .form-group.row
        =f.label :password, class: 'col-sm-4 col-form-label'
        .col-sm-8
          =f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Senha...'
      .form-group.row
        =f.label :password_confirmation, class: 'col-sm-4 col-form-label'
        .col-sm-8
          =f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Senha...'
  .row
    .col-sm-12
      =f.submit t('actions.sign_up'), class: 'btn btn-secondary btn-sm'
